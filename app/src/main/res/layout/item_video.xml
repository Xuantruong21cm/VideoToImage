<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:background="@drawable/custom_clickview"
    android:padding="@dimen/_4sdp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/_4sdp"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_110sdp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:visibility="visible"
                    android:padding="@dimen/_4sdp"
                    android:id="@+id/tv_videoDuration"
                    android:gravity="center|right"
                    android:textColor="#FB0000"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold"
                    tools:text="69:96"
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"/>
                <androidx.cardview.widget.CardView
                    android:background="#00000000"
                    app:cardCornerRadius="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:scaleType="fitXY"
                        android:id="@+id/img_videoIcon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
            </FrameLayout>
        </LinearLayout>

        <TextView
            android:autoSizeMaxTextSize="@dimen/_4sdp"
            android:maxLength="14"
            android:id="@+id/tv_titleVideo"
            android:gravity="center"
            android:textColor="#3A1919"
            android:textStyle="bold"
            android:textSize="@dimen/_16sdp"
            tools:text="Video Sá»‘ 1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"/>
    </LinearLayout>

</FrameLayout>